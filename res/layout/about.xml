<?xml version="1.0" encoding="utf-8"?>
<ScrollView
android:id="@+id/widget28"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<LinearLayout
android:id="@+id/widget31"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical">
<ImageView
android:id="@+id/widget32"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:src="@drawable/ui_full"
>
</ImageView>
<TextView
android:id="@+id/widget33"
android:layout_width="wrap_content"
android:layout_height="wrap_content" android:text="Above you see the full UI. The green area show the standard Android status bar.

The area in light blue is the main text window, all game messages will appear here.

The area in orange, below the main text area is the text input field. This is where you press to bring up the standard Android software keyboard and see all text as you input it. Pressing ENTER will send this text to the game server.">
</TextView>
<TableLayout
android:id="@+id/widget34"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="vertical"
android:layout_marginTop="10px">
<TableRow
android:id="@+id/widget35"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
>
<ImageView
android:id="@+id/widget36"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:src="@drawable/ui_north"
>
</ImageView>
<ImageView
android:id="@+id/widget41"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:src="@drawable/ui_right"
>
</ImageView>
<ImageView
android:id="@+id/widget40"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:src="@drawable/ui_south"
>
</ImageView>
<ImageView
android:id="@+id/widget39"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:src="@drawable/ui_left"
>
</ImageView>
<ImageView
android:id="@+id/widget38"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:src="@drawable/ui_up"
>
</ImageView>
<ImageView
android:id="@+id/widget37"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:src="@drawable/ui_down"
>
</ImageView>
</TableRow>
</TableLayout>
<TextView
android:id="@+id/widget42"
android:layout_width="wrap_content"
android:layout_height="wrap_content" android:text="These buttons move you north, east, south, west, up and down, respectively.">
</TextView>
<ImageView
android:id="@+id/widget43"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:src="@drawable/ui_enter"
android:layout_marginTop="10px">
</ImageView>
<TextView
android:id="@+id/widget44"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="This button can be used as the ENTER key."
>
</TextView>
<ImageView
android:id="@+id/widget45"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:src="@drawable/ui_command"
android:layout_marginTop="10px">
</ImageView>
<TextView
android:id="@+id/widget46"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="This button brings up the game command interface."
>
</TextView>
<ImageView
android:id="@+id/widget47"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:src="@drawable/ui_switch"
android:layout_marginTop="10px">
</ImageView>
<TextView
android:id="@+id/widget48"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Press the two blue arrows in the upper-right corner (red square in image) of the interface to switch between command buttons and the NetHak software keyboard."
>
</TextView>
<TextView
android:id="@+id/widget49"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Press the MENU key on your device to access the online help page, the community page and to switch of the UI elements completely (you can bring it back with the UI switch button in the upper-right corner)."
android:layout_marginTop="10px">
</TextView>
<TextView
android:id="@+id/widget50"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Use the trackball (or equivalent directional buttons) of your phone to scroll through the last 20 commands and repeat them."
android:layout_marginTop="10px">
</TextView>
</LinearLayout>
</ScrollView>
