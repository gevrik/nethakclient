<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout 
android:id="@+id/RelativeLayout01" 
android:layout_width="fill_parent" 
android:layout_height="fill_parent" 
xmlns:android="http://schemas.android.com/apk/res/android">

<EditText 
android:layout_height="wrap_content" 
android:layout_below="@+id/commandView" 
android:layout_width="fill_parent" 
android:textColor="@color/color_white" 
android:background="@color/color_black" 
android:text="Commands" 
android:id="@+id/cmdText" 
android:singleLine="true" 
android:textSize="10pt" android:layout_alignParentBottom="true"></EditText>

<TextView 
android:typeface="monospace" 
android:layout_width="fill_parent" 
android:id="@+id/MainText" 
android:text="MainText" 
android:scrollbarAlwaysDrawVerticalTrack="true" 
android:scrollbars="vertical" 
android:focusable="true" 
android:focusableInTouchMode="true" 
android:editable="false" 
android:gravity="bottom" 
android:textColor="@color/color_white" 
android:layout_above="@+id/cmdText" 
android:layout_height="fill_parent" 
android:textStyle="normal" 
android:textSize="4pt" 
android:autoLink="all" android:linksClickable="true"></TextView>

<TableLayout
android:layout_height="wrap_content"
android:layout_width="wrap_content"
android:layout_alignParentRight="true" android:layout_centerInParent="true">

<TableRow>
<ImageButton
android:id="@+id/up_button"
android:layout_width="48px"
android:layout_height="48px"
android:scaleType="center"
android:src="@drawable/up_button"
android:background="@drawable/up_button"
/>
<ImageButton
android:id="@+id/north_button"
android:layout_width="48px"
android:layout_height="48px"
android:scaleType="center"
android:src="@drawable/north_button"
android:background="@drawable/north_button"
/>
<ImageButton
android:id="@+id/down_button"
android:layout_width="48px"
android:layout_height="48px"
android:scaleType="center"
android:src="@drawable/down_button"
android:background="@drawable/down_button"
/>
</TableRow>

<TableRow>
<ImageButton
android:id="@+id/west_button"
android:layout_width="48px"
android:layout_height="48px"
android:scaleType="center"
android:src="@drawable/west_button"
android:background="@drawable/west_button"
/>
<ImageButton
android:id="@+id/command_button"
android:layout_width="48px"
android:layout_height="48px"
android:scaleType="center"
android:src="@drawable/stop_button"
android:background="@drawable/stop_button"
/>
<ImageButton
android:id="@+id/east_button"
android:layout_width="48px"
android:layout_height="48px"
android:scaleType="center"
android:src="@drawable/east_button"
android:background="@drawable/east_button"
/>
</TableRow>

<TableRow>
<ImageButton
android:id="@+id/enter_button"
android:layout_width="48px"
android:layout_height="48px"
android:scaleType="center"
android:src="@drawable/combat_button"
android:background="@drawable/combat_button"
/>
<ImageButton
android:id="@+id/south_button"
android:layout_width="48px"
android:layout_height="48px"
android:scaleType="center"
android:src="@drawable/south_button"
android:background="@drawable/south_button"
/>
<ImageButton
android:id="@+id/look_button"
android:layout_width="48px"
android:layout_height="48px"
android:scaleType="center"
android:src="@drawable/look_button"
android:background="@drawable/look_button"
/>
</TableRow>

</TableLayout>

</RelativeLayout>
